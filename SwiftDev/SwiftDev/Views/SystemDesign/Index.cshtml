@model SwiftDev.Models.SystemDesignModel
           

@{
    ViewBag.Title = "System Designs";
}

<h2>@ViewBag.Title</h2>

<!--    This class will show all the Concerning System Designs with 
        the option of uploading a new design (providing User has sufficient rights)-->
@using (Html.BeginForm("ImageUpload", "SystemDesign", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true);
    
    <div> Select Image to upload a DFD
        <input name="dfd" type="file" multiple="multiple">
    <input type="submit" value="Upload Image" />
    </div>
    
}

@{
    Html.RenderAction("_showBlobs", "SystemDesign", new { containerName = "dfd" });
}
<hr />


